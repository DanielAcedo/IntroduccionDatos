<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danielacedo.tema1.Ejercicio3Activity">

    <TextView
        android:text="@string/txv_LinkEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:id="@+id/txv_LinkEntry" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txv_LinkEntry"
        android:layout_alignParentLeft="true"
        android:id="@+id/edt_Link" />

    <Button
        android:text="@string/btn_OkWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_Link"
        android:layout_alignParentLeft="true"
        android:id="@+id/btn_OkWeb" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_OkWeb"
        android:layout_marginTop="117dp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:id="@+id/wv_web" />
</RelativeLayout>
