<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danielacedo.tema1.Ejercicio2Activity"
    android:background="@color/background_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ly_logo"></LinearLayout>

    <TextView
        android:text="@string/txv_Cm_text_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textSize="23sp"
        android:id="@+id/txv_Cm" />

    <Button
        android:text="@string/btn_ConvertirCm_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llo_Magnitudes"
        android:id="@+id/btn_ConvertirCm"
        android:textSize="17sp"
        android:layout_weight="1"

        android:layout_marginTop="53dp"
        />

    <Button
        android:text="@string/btn_CambiarModo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_CambiarModo"
        android:textSize="17sp"
        android:layout_below="@+id/btn_ConvertirCm"
        android:layout_alignLeft="@+id/btn_ConvertirCm"
        android:layout_alignStart="@+id/btn_ConvertirCm"
        android:layout_alignRight="@+id/btn_ConvertirCm"
        android:layout_alignEnd="@+id/btn_ConvertirCm" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llo_Magnitudes"
        android:gravity="top"
        android:layout_below="@+id/txv_Cm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edt_Cm"
            android:layout_weight="1"
            android:layout_marginTop="142dp"
            android:background="@drawable/cm_edt_border_cm"
            android:padding="5dp"
            />
    </LinearLayout>

</RelativeLayout>
